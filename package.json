{
  "name": "oaklang",
  "version": "1.0.0",
  "scripts": {
    "build:all": "turbo run build",
    "start:all": "turbo run start",
    "build:web": "turbo run build --filter=@acme/web",
    "start:web": "turbo run start --filter=@acme/web",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@acme/web",
    "wakaq:worker": "pnpm --filter wakaq worker",
    "wakaq:scheduler": "pnpm --filter wakaq scheduler",
    "wakaq:info": "pnpm --filter wakaq info",
    "wakaq:purge": "pnpm --filter wakaq purge",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "generate": "pnpm --filter db generate",
    "migrate": "pnpm --filter db migrate",
    "studio": "pnpm --filter db studio",
    "seed": "pnpm --filter db seed",
    "clean": "turbo run clean && git clean -xdf .turbo node_modules"
  },
  "license": "ISC",
  "dependencies": {
    "@acme/prettier-config": "workspace:*",
    "turbo": "^2.2.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": "@acme/prettier-config",
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20"
  }
}
