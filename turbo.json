{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "start": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "globalEnv": [
    "SKIP_ENV_VALIDATION",
    "DATABASE_URL",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_SECRET",
    "AUTH_URL",
    "AUTH_TRUST_HOST",
    "PORT",
    "OPENAI_API_KEY",
    "RESEND_API_KEY",
    "ACCESS_REQUEST_RECEIVERS"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "PUBLIC_URL",
    "npm_lifecycle_event"
  ]
}
