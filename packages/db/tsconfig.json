{
  "extends": "@acme/tsconfig/internal-package.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "ESNext"
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules"]
}
